<h1>Create Your New Project</h1>

<%=form_for(@project) do |f|%> 
  <%=f.hidden_field :user_id%> 

  <%=f.label "Project Name:"%>
  <%=f.text_field :name%> <br>
  <br>

  <%=f.label "What Type of project is this?"%>
  <%=f.text_field :project_type%> <br>
  <br>

  <%=f.label "How much does it cost? $"%>
  <%=f.number_field :cost%> <br>
  <br>

  <%=f.label "Rate difficulty from 1 - 5"%>
  <%=f.number_field :difficulty%> <br>
  <br>

  <h2>Enter the the the type of materials needed for this project along with sizes and quantities.</h2>

  <%=f.fields_for :project_materials, @materials do |project_materials|%>
  <p>Quantity: <%=project_materials.number_field :quantity%></p>
  <p>Size: <%=project_materials.text_field :size%></p>
  <h3>Select a Material from the dropdown:</h3>

  <%=project_materials.collection_select :material_id, Material.order('name ASC').all, :id, :name, include_blank: "Select Material"%>
  <br>
  
  <h3>Or create a new material:</h3>
  <%=f.fields_for :materials, @project.materials.build do |materials_fields|%>
    <%=f.label "Type of material"%>
    <%=materials_fields.text_field :name%>
    <br>
    <%=f.label "Check if this material is a tool"%>
    <%=materials_fields.check_box :tool%>
    <p>_______________________________________</p>
<%end%>
<%end%>
<br>


  <%=f.submit%>



<%end%>


